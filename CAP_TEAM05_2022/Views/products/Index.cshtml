@model IEnumerable<CAP_TEAM05_2022.Models.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_QuyThanh.cshtml";
    int no = 0;
}

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Quản lý sản phảm</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="https://tancool.net">
                                    <i class="feather icon-home">
                                    </i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">Quản lý sản phảm</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <button type="button" class="btn btn-secondary">Xuất tệp Excel</button>
                                    <button type="button" class="btn btn-dark">Nhập tệp Excel</button>
                                    <button type="button" class="btn btn-success">Mẫu tệp Excel</button>
                                </div>

                                <div class="col-md-3">
                                    <select class="custom-select" id="filter_GroupProduct" name="filter_GroupProduct" required>
                                        <option value="" disabled="disabled" selected="selected">Xem tất cả nhóm hàng</option>

                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="custom-select" id="filter_Category" name="filter_Category" required>
                                        <option value="" disabled="disabled" selected="selected">Xem tất cả danh mục</option>

                                    </select>
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-warning btn-block">Xem</button>
                                </div>
                                <div class="col-md-5">
                                    <button type="button" class="btn btn-primary float-right ml-2" data-toggle="modal" data-target="#AddProduct">Tạo mới</button>
                                   
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-border-style">
                            <div class="table-responsive">
                                <table id="example"  class="table table-hover card-scroll">
                                    <thead>
                                        <tr>
                                            <th class="sticky-col first-col">#</th>
                                            <th class="sticky-col first-col">Mã sản phẩm</th>
                                            <th class="sticky-col second-col">Tên sản phẩm</th>
                                            <th>Nhóm hàng</th>
                                            <th>Danh mục</th>
                                            <th class="text-center">Đơn vị</th>
                                            <th class="text-center">Giá tiền bán</th>
                                            <th class="text-center">Giá tiền nhập</th>
                                            <th class="text-center">Số lượng nhập</th>
                                            <th class="text-center">Đã bán</th>
                                            <th class="text-center">Trạng thái</th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                     
                                        @foreach (var item in Model)
                                        {
                                            no++;
                                        <tr>
                                            <td class="sticky-col first-col">@no</td>
                                            <td class="sticky-col first-col">@item.code</td>
                                            <td class="sticky-col second-col">@item.name</td>
                                            <td>@item.group.name</td>
                                            <td>@item.category.name</td>
                                            <td class="text-center">@item.unit</td>
                                            <td class="text-center">@item.price</td>
                                            <td class="text-center">@item.import_inventory.Where(i => i.product_id == item.id).FirstOrDefault().price_import</td>
                                            <td class="text-center">@item.import_inventory.Where(i => i.product_id == item.id).Sum(i => i.quantity)</td>
                                            <td class="text-center">@item.sale_details.Where(i => i.product_id == item.id).Sum(s => s.sold)</td>
                                            <td class="text-center">
                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input">
                                                    <label class="custom-control-label">
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                <button title="Sao chép" class="btn btn-primary">
                                                    <i class="feather icon-copy">
                                                    </i>
                                                </button>
                                                <button title="Cập nhật" class="btn btn-success">
                                                    <i class="feather icon-edit">
                                                    </i>
                                                </button>
                                                <button title="Xoá" class="btn btn-danger">
                                                    <i class="feather icon-trash-2">
                                                    </i>
                                                </button>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="ImportModal" tabindex="-1" role="dialog" aria-labelledby="ImportModalTitle" aria-hidden="true" class="modal fade">
                <div role="document" class="modal-dialog">
                    <form>
                        <div class="modal-content">
                            <div class="modal-header styling-modal-header-update">
                                <h5 id="ImportModalTitle" class="modal-title">Nhập tệp Excel</h5>
                                <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <label>
                                    Tệp Excel <span class="text-danger">(*)</span>
                                </label>
                                <input type="file" id="fileImport" name="fileImport" class="form-control">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-3d">Tải lại</button>
                                <button type="submit" class="btn btn-primary btn-3d">Import</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div id="AddProduct" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="AddProductLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <form class="needs-validation" method="post" action="@Url.Action("Create_Product", "products")" novalidate>
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h5 class="modal-title" id="AddProductLabel">Thêm mới sản phẩm</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            </div>

                            <div class="modal-body ">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>
                                                Tên sản phẩm<span class="text-danger">*</span>
                                            </label>
                                            <div class="position-relative">
                                                <input type="text" placeholder="Nhập tên sản phẩm" id="first-name-icon" class="form-control" name="name_product" pattern="\S+.*" required>
                                                <div class="invalid-feedback">
                                                    Vui lòng nhập tên sản phẩm !
                                                </div>
                                            </div> <!---->
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>
                                                Đơn vị tính<span class="text-danger">*</span>
                                            </label>
                                            <div class="position-relative">
                                                <input type="text" placeholder="Nhập đơn vị tính " id="first-name-icon" class="form-control" name="unit" pattern="\S+.*" required>
                                                <div class="invalid-feedback">
                                                    Vui lòng nhập tên đơn vị tính !
                                                </div>
                                            </div> <!---->
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>
                                                Số lượng sản phẩm<span class="text-danger">*</span>
                                            </label>
                                            <div class="position-relative">
                                                <input type="number" placeholder="Nhập số lượng sản phẩm" id="first-name-icon" class="form-control" name="quantity" required>
                                                <div class="invalid-feedback">
                                                    Vui lòng nhập số lượng sản phẩm !
                                                </div>
                                            </div> <!---->
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>
                                                Nhóm hàng<span class="text-danger">*</span>
                                            </label>
                                            <div class="position-relative">
                                                <select class="custom-select" id="GroupProductDropdown" name="GroupProductDropdown" required>
                                                    
                                                </select>
                                                <div class="invalid-feedback">Vui lòng chọn nhóm hàng</div>
                                            </div> <!---->
                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>
                                                Danh mục sản phẩm<span class="text-danger">*</span>
                                            </label>
                                            <div class="position-relative">
                                                <select class="custom-select" id="CategoryDropdown" name="CategoryDropdown" required>
                                                   
                                                </select>
                                                <div class="invalid-feedback">Vui lòng chọn danh mục</div>
                                            </div> <!---->
                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>
                                                Đơn giá bán<span class="text-danger">*</span>
                                            </label>
                                            <div class="position-relative">
                                                <input type="text" placeholder="Nhập giá tiền" id="product-price-sold" max="999999999999" class="form-control "
                                                      pattern="[0-9.,]+" data-type="number" name="sell_price"  required>
                                                <div class="invalid-feedback">
                                                    Giá tiền bán không được để trống !
                                                </div>
                                            </div> <!---->
                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="product-price-import">
                                                Đơn giá nhập<span class="text-danger">*</span>
                                            </label>
                                            <div class="position-relative">
                                                <input type="text" placeholder="Nhập giá tiền" id="product-price-buy" max="999999999999" class="form-control"
                                                          pattern="[0-9.,]+" data-type="number"  name="purchase_price" required>
                                                <div class="invalid-feedback">
                                                    Giá tiền nhập không được để trống !
                                                </div>
                                            </div>
                                            <!---->
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn  btn-secondary" data-dismiss="modal">Hủy</button>
                                <button type="submit" class="btn btn-primary">Thêm mới</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
        $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("getGroupProduct", "groups")",
            data: "{}",
            success: function (data) {
                var s = '<option value="" disabled="disabled" selected="selected">Chọn nhóm hàng</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].groupID + '">' + data[i].groupName + '</option>';
                }
                $("#GroupProductDropdown").html(s);
            }
        });
        $.ajax({
            type: "GET",
            url: "@Url.Action("getCategory", "categories")",
            data: "{}",
            success: function (data) {
                var s = '<option value="" disabled="disabled" selected="selected">Chọn danh mục</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].categoryID + '">' + data[i].categoryName + '</option>';
                }
                $("#CategoryDropdown").html(s);
            }
        });
                    $.ajax({
            type: "GET",
            url: "@Url.Action("getGroupProduct", "groups")",
            data: "{}",
            success: function (data) {
                var s = '<option value="" disabled="disabled" selected="selected">Xem tất cả nhóm hàng</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].groupID + '">' + data[i].groupName + '</option>';
                }
                $("#filter_GroupProduct").html(s);
            }
        });
        $.ajax({
            type: "GET",
            url: "@Url.Action("getCategory", "categories")",
            data: "{}",
            success: function (data) {
                var s = '<option value="" disabled="disabled" selected="selected">Xem tất cả danh mục</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].categoryID + '">' + data[i].categoryName + '</option>';
                }
                $("#filter_Category").html(s);
            }
        });
    });


    $(document).ready(function () {
        $('#example').DataTable({
            pagingType: 'full_numbers',
        });
         $("#filter_GroupProduct").change(function () {
            GetList()
        });

       function GetList() {
           var month = $("#filter_GroupProduct").val();
             $.ajax({
                 url: '@Url.Action("ProductList", "products")',
                 data: {
                     month: month,
                 }
                }).done(function(result) {
                     $('#example').DataTable()
                    console.log(result)
                 }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
                     console.log(textStatus)
                     console.log(errorThrown)
                     alert("Something Went Wrong, Try Later");
                 });
        }
    });
    $('#product-price-sold').keydown(function (e) {
        setTimeout(() => {
            let parts = $(this).val().split(".");
            let v = parts[0].replace(/\D/g, ""),
                dec = parts[1]
            let calc_num = Number((dec !== undefined ? v + "." + dec : v));
            // use this for numeric calculations
            // console.log('number for calculations: ', calc_num);
            let n = new Intl.NumberFormat('en-EN').format(v);
            n = dec !== undefined ? n + "." + dec : n;
            $(this).val(n);
        })
    })
    $('#product-price-buy').keydown(function (e) {
        setTimeout(() => {
            let parts = $(this).val().split(".");
            let v = parts[0].replace(/\D/g, ""),
                dec = parts[1]
            let calc_num = Number((dec !== undefined ? v + "." + dec : v));
            // use this for numeric calculations
            // console.log('number for calculations: ', calc_num);
            let n = new Intl.NumberFormat('en-EN').format(v);
            n = dec !== undefined ? n + "." + dec : n;
            $(this).val(n);
        })
    })



</script>
