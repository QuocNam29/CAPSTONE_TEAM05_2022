@model CAP_TEAM05_2022.Models.product
@using CAP_TEAM05_2022.Models
@using Constants = CAP_TEAM05_2022.Helper.Constants
@{
    bool isCreate = ViewBag.isCreate;
    List<customer> supplier = ViewBag.SupplierId;
    Layout = null;
    bool checkSale = Model.sale_details.Any();
    bool checkCart = Model.carts.Any();

}

<input type="number" id="isCreate" value="@Constants.NOT_CREATE_FORM" />
<div id="ProductForm" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog  modal-lg" role="document">
        <form class="ProductForm" method="post" action="@Url.Action("Edit", "products")" novalidate>
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title" id="AddProductLabel">Thêm mới sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body ">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.id)
                    @Html.HiddenFor(m => m.code)
                    @Html.HiddenFor(m => m.created_at)
                    @Html.HiddenFor(m => m.quantity)
                    @Html.HiddenFor(m => m.quantity_remaning)
                    @Html.HiddenFor(m => m.created_by)
                    @Html.HiddenFor(m => m.status)
                    @Html.HiddenFor(m => m.purchase_price)
                    @Html.HiddenFor(m => m.sell_price)
                    @Html.HiddenFor(m => m.sell_price_swap)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    Tên sản phẩm<span class="text-danger">*</span>
                                </label>
                                <div class="position-relative">
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div> <!---->
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Nhóm hàng<span class="text-danger">*</span>
                                </label>
                                <div class="position-relative">
                                    @Html.DropDownListFor(m => m.group_id, (SelectList)ViewBag.GroupId, new { @class = "form-control custom-select", @aria_label = "Chọn danh mục thiết bị" })
                                    @Html.ValidationMessageFor(model => model.group_id, "", new { @class = "text-danger" })
                                </div> <!---->

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Danh mục sản phẩm<span class="text-danger">*</span>
                                </label>
                                <div class="position-relative">
                                    @Html.DropDownListFor(m => m.category_id, (SelectList)ViewBag.CategoryId, new { @class = "form-control custom-select", @aria_label = "Chọn danh mục thiết bị" })
                                    @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
                                </div> <!---->

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    Đơn giá bán<span class="text-danger">*</span>
                                </label>
                                <div class="position-relative">
                                    <div class="input-group mb-3">
                                        <input type="text" value="@Model.sell_price.ToString("N0")" placeholder="Nhập giá tiền" id="product-price-sold" class="form-control Price"
                                               data-val="true" data-val-required="Vui lòng nhập đơn giá bán !" pattern="[0-9.,]+" data-type="number" name="Editsell_price" required>                                        <div class="input-group-append">
                                            <select id="UnitBy" class="input-group-text select-unit" name="unit" required data-val="true" data-val-required="Vui lòng đơn vị !">
                                                <option disabled="disabled" value="" selected>Đơn vị</option>
                                                <optgroup label="Khác">
                                                    <option data-name="bao" value="Bao">
                                                        bao
                                                    </option>
                                                    <option data-name="chai" value="Chai">
                                                        chai
                                                    </option>
                                                    <option data-name="gói" value="Gói">
                                                        Gói
                                                    </option>
                                                </optgroup>
                                                <optgroup label="Khối lượng">

                                                    <option data-name="tạ" value="Tạ">
                                                        tạ
                                                    </option>

                                                    <option data-name="kg" value="Kg">
                                                        kg
                                                    </option>
                                                    <option data-name="gam" value="Gam">
                                                        gam
                                                    </option>
                                                </optgroup>
                                                <optgroup label="Thể tích">
                                                    <option data-name="lít" value="Lít">
                                                        lít
                                                    </option>
                                                    <option data-name="ml" value="ml">
                                                        ml
                                                    </option>
                                                </optgroup>

                                            </select>

                                        </div>
                                    </div>
                                    @Html.ValidationMessage("Editsell_price", "", new { @class = "text-danger" })
                                    @Html.ValidationMessage("unit", "", new { @class = "text-danger" })
                                </div> <!---->

                            </div>
                        </div>
                        @if (!checkSale || !checkCart)
                        {
                            <div class="col-md-12 mt-2">
                                <div class="form-group">
                                    <input type="checkbox" id="CheckSwap" name="swap" @(Model.unit_swap != null ? "checked" : "")>
                                    <input type="number" id="CheckSwapValue" name="CheckSwapValue" hidden value="@(Model.unit_swap != null ? 1 : 0)" />
                                    <label for="swap">Quy đổi sang đơn vị khác</label>
                                </div>
                            </div>
                            <script>
                                 document.getElementById('CheckSwap').onclick = function (e) {
                                    if (this.checked) {
                                    $(".swap").show();
                                        $("#CheckSwapValue").val(@Constants.UNIT_CONVERT);
                                    var UnitBy = $("#UnitBy").val()
                                    document.getElementsByClassName('UnitCurrent')[0].innerHTML = UnitBy;
                                    }
                                    else {
                                        $(".swap").hide();
                                        $("#CheckSwapValue").val(@Constants.NO_UNIT_CONVERT);
                                    }
                        };
                            </script>
                        }
                        else
                        {
                            <div class="col-md-12 mt-2">
                                <div class="form-group">
                                    <input type="number" id="CheckSwapValue" name="CheckSwapValue" hidden value="@(Model.unit_swap != null ? 1 : 0)" />
                                    <label for="swap">Quy đổi sang đơn vị khác</label>
                                </div>
                            </div>
                        }

                        <div class="col-md-3 swap" style="display: @(Model.unit_swap != null ? "flex" : "none");">
                            <div class="form-group">
                                <div class="position-relative">
                                    <div class="input-group mb-3">
                                        <input type="number" value="1" disabled data-model="unit_current_quantity" id="unit-quantity-current" aria-describedby="basic-addon2" class="form-control"
                                               required="required">
                                        <div class="input-group-append">
                                            <span id="UnitCurrent" class="input-group-text UnitCurrent"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1 col-icon swap" style="display: @(Model.unit_swap != null ? "flex" : "none");">
                            <div class="form-group">
                                <i aria-hidden="true" class="feather icon-arrow-right icon-swap">
                                </i>
                            </div>
                        </div>
                        <div class="col-md-4 swap" style="display: @(Model.unit_swap != null ? "flex" : "none");">
                            <div class="form-group">
                                <div class="position-relative">
                                    <div class="input-group mb-3">
                                        <input type="number" @(checkSale || checkCart ? "readonly" : "") value="@Model.quantity_swap" name="quantity_swap" data-model="unit_swap_quantity" placeholder="Nhập số lượng"
                                               required data-val="true" data-val-required="Vui lòng nhập số lượng quy đổi !" id="unit-quantity-input" max="999999999999" aria-describedby="unit-quantity" class="form-control">
                                        <div class="input-group-append">
                                            <select id="unitSwap" name="unit_swap" class="input-group-text select-unit" required data-val="true" data-val-required="Vui lòng đơn vị quy đổi !">
                                                <option disabled="disabled" value="" selected>Đơn vị</option>
                                                <optgroup label="Khác">
                                                    <option data-name="bao" value="Bao">
                                                        bao
                                                    </option>
                                                    <option data-name="chai" value="Chai">
                                                        chai
                                                    </option>
                                                </optgroup>
                                                <optgroup label="Khối lượng">

                                                    <option data-name="tạ" value="Tạ">
                                                        tạ
                                                    </option>

                                                    <option data-name="kg" value="Kg">
                                                        kg
                                                    </option>
                                                    <option data-name="gam" value="Gam">
                                                        gam
                                                    </option>
                                                </optgroup>
                                                <optgroup label="Thể tích">
                                                    <option data-name="lít" value="Lít">
                                                        lít
                                                    </option>
                                                    <option data-name="ml" value="ml">
                                                        ml
                                                    </option>
                                                </optgroup>

                                            </select>
                                        </div>
                                    </div>
                                    @Html.ValidationMessage("quantity_swap", "", new { @class = "text-danger" })
                                    @Html.ValidationMessage("unit_swap", "", new { @class = "text-danger" })
                                    @if (Model.unit_swap != null)
                                    {
                                        <script>
                                            $("#unitSwap").val('@Model.unit_swap');
                                        </script>

                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 swap" style="display: @(Model.unit_swap != null ? "flex" : "none");">
                            <div class="form-group">
                                <input type="text" value="@(Model.sell_price_swap != null ? ((decimal)Model.sell_price_swap).ToString("N0"): "")" name="price_swap" placeholder="Nhập giá tiền" id="product-price-swap"
                                       required data-val="true" data-val-required="Vui lòng nhập đơn giá quy đổi !" data-model="unit_price" class="form-control Price">
                            </div>
                            @Html.ValidationMessage("price_swap", "", new { @class = "text-danger" })
                        </div>

                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!--Validation-->
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
        $('.ProductForm').submit(function (e) {
                    var form = $(this);
                    var _this = $(this);
                    var _form = _this.closest("form");
                    var isvalid = _form.valid()
                    // Check if form is valid then submit ajax
                    if (isvalid) {
                        e.preventDefault();
                        var url = form.attr('action');
                        console.log(url);
                        $.ajax({
                            url: url,
                            type: 'POST',
                            data: form.serialize(),
                            success: function (data) {
                                // Hide bootstrap modal to prevent conflict
                                $('.modal').modal('hide');

                                if (data.status) {
                                    // Refresh table data
                                    var group_id = $("#filter_GroupProduct").val();
                                    var category_id = $("#filter_Category").val();
                                    GetList(group_id, category_id);
                                    Swal.fire('Thành công !', data.message, 'success')

                                    form[0].reset();
                                    form.removeClass('was-validated');
                                } else {
                                    Swal.fire('Lỗi !', data.message, 'error')
                                }
                            }
                        });
                    }
        });

    $("#UnitBy").val('@Model.unit');
    document.getElementsByClassName('UnitCurrent')[0].innerHTML = '@Model.unit';

            $("#UnitBy").change(function () {
            var UnitBy = $("#UnitBy").val()
            document.getElementsByClassName('UnitCurrent')[0].innerHTML = UnitBy;
        });

        $("#add_quantity").change(function () {
            var add_quantity = $("#add_quantity").val()
            var purchase_price = $("#purchase_price").val().replace(/\,/g, '').replace(/\./g, '');
            $("#Sum_purchase").val((add_quantity * purchase_price).toLocaleString());
        });
        $("#purchase_price").change(function () {
            var add_quantity = $("#add_quantity").val()
            var purchase_price = $("#purchase_price").val().replace(/\,/g, '').replace(/\./g, '');
            $("#Sum_purchase").val((add_quantity * purchase_price).toLocaleString());
        });
            $('.Price').keydown(function (e) {
                setTimeout(() => {
                    let parts = $(this).val().split(".");
                    let v = parts[0].replace(/\D/g, ""),
                        dec = parts[1]
                    let calc_num = Number((dec !== undefined ? v + "." + dec : v));
                    // use this for numeric calculations
                    // console.log('number for calculations: ', calc_num);
                    let n = new Intl.NumberFormat('en-EN').format(v);
                    n = dec !== undefined ? n + "." + dec : n;
                    $(this).val(n);
                })
            })
</script>


