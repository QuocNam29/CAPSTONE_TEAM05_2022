@model IEnumerable<CAP_TEAM05_2022.Models.sale_details>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_QuyThanh.cshtml";
}


<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Quản lý bán hàng</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="https://tancool.net">
                                    <i class="feather icon-home">
                                    </i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">Quản lý bán hàng</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-create">
                        <div class="card-header">
                            <h4>Tạo mới đơn hàng</h4>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="search" placeholder="Chọn khách hàng" id="customer_name" aria-autocomplete="list" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Mã khách hàng" id="customer_code" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Số điện thoại khách hàng" id="customer_phone" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Nhóm khách hàng" id="customer_type" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Số lần mua hàng:</span>
                                                    </div>
                                                    <input type="text" placeholder="0" id="first-name-icon" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="search" placeholder="Chọn khách hàng" id="product_name" aria-autocomplete="list" class="form-control">

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Mã sản phẩm" disabled="disabled" id="product_code" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Đơn vị tính - Số lượng tồn" id="product_unit" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Giá bán:</span>
                                                    </div>
                                                    <input type="text" placeholder="Gián bán" id="product_price" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                            <!---->
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Tồn nợ</span>
                                                    </div>
                                                    <input type="text" placeholder="0" id="first-name-icon" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group mb-3">
                                                    <input type="number" id="product_quantity" aria-label="Recipient's username" aria-describedby="basic-addon2" min="1"  class="form-control" value="1">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">SL (*)</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <!---->
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group mb-3">
                                                    <input type="number" id="product_discount" aria-label="Recipient's username" aria-describedby="basic-addon2" min="0" value="0" max="100" class="form-control">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">CK (%)</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <!---->
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Thành tiền:</span>
                                                    </div>
                                                    <input type="text" id="sum_price" placeholder="Tổng" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input id="first-name-icon" placeholder="Ghi chú" class="form-control">
                                            </div>
                                            <!---->
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-primary btn-block">Thêm</button>
                                        <button type="button" class="btn btn-info btn-block">
                                            Làm mới
                                        </button>
                                        <button type="button" class="btn btn-danger btn-block" style="display: none;">
                                            Huỷ bỏ
                                        </button>
                                        <hr>
                                        <button type="button" disabled="disabled" class="btn btn-warning btn-block">
                                            Thanh toán
                                        </button>
                                        <button type="button" disabled="disabled" class="btn btn-dark btn-block">
                                            Ghi nợ
                                        </button>
                                        <hr>
                                        <button type="button" disabled="disabled" class="btn btn-success btn-block">
                                            Xem hoá đơn
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row" style="display: none;">
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Tạm tính tiền</label>
                        <input type="text" disabled="disabled" class="form-control">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>VAT(%)</label>
                        <input type="number" min="0" max="100" class="form-control">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Chiết khấu(%)</label>
                        <input type="number" min="0" max="100" class="form-control">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Thành tiền</label>
                        <input type="text" disabled="disabled" class="form-control">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Trả trước</label>
                        <input type="text" placeholder="Thanh toán 1 phần" class="form-control">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <input type="text" placeholder="Ghi chú" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body table-border-style">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">STT</th>
                                            <th>Mã hàng</th>
                                            <th>Tên hàng hàng</th>
                                            <th class="text-center">Đơn vị</th>
                                            <th class="text-center">Số lượng</th>
                                            <th class="text-center">Giá nhập</th>
                                            <th class="text-center">Chiết khấu</th>
                                            <th class="text-center">Giá bán</th>
                                            <th class="text-center">Thành tiền</th>
                                            <th>Ghi chú</th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody style="display: none;">
                                        <tr>
                                            <td colspan="11">
                                                <div class="alert alert-warning">
                                                    <p class="text-center">Không tìm thấy dữ liệu</p>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
            </div>
            <div>
            </div>
        </div>
    </div>
</section>
