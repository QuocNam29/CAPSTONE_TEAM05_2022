@model IEnumerable<CAP_TEAM05_2022.Models.sale_details>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_QuyThanh.cshtml";
}

<input type="text" hidden id="URLCreateCart" value="@Url.Action("CreateCart", "carts")" />
<input type="text" hidden id="URLCartList" value="@Url.Action("Index", "carts")" />
<input type="text" hidden id="URLGetSearchValue" value="@Url.Action("GetSearchValue","customers")" />
<input type="text" hidden id="URLFindCustomer_name" value="@Url.Action("FindCustomer_name","customers")/" />
<input type="text" hidden id="URLGetSearchValue_product" value="@Url.Action("GetSearchValue", "products")" />
<input type="text" hidden id="URLFindProduct_name" value="@Url.Action("FindProduct_name", "products")/" />
<input type="text" hidden id="URLCreateSale" value="@Url.Action("CreateSale", "sales")" />


<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Quản lý bán hàng</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="https://tancool.net">
                                    <i class="feather icon-home">
                                    </i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">Quản lý bán hàng</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-create">
                        <div class="card-header">
                            <h4>Tạo mới đơn hàng</h4>
                        </div>
                        <div class="card-body">
                            <form class="needs-validation" method="post" @*action="@Url.Action("CreateCart", "carts")"*@ novalidate>
                                <div class="row">

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <input type="hidden" id="customer_id" class="form-control">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Chọn khách hàng" id="customer_name" aria-autocomplete="list" class="form-control" required>
                                                <div class="invalid-feedback">
                                                    Vui lòng nhập tên sản phẩm !
                                                </div>
                                            </div> <!---->
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Mã khách hàng" id="customer_code" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Số điện thoại khách hàng" id="customer_phone" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Nhóm khách hàng" id="customer_type" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Số lần mua hàng:</span>
                                                    </div>
                                                    <input type="text" placeholder="0" id="first-name-icon" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <input type="hidden" id="product_id" class="form-control">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Chọn sản phẩm" id="product_name" aria-autocomplete="list" class="form-control" required>
                                                <div class="invalid-feedback">
                                                    Vui lòng nhập tên sản phẩm !
                                                </div>
                                            </div> <!---->
                                        </div>

                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Mã sản phẩm" disabled="disabled" id="product_code" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input type="text" placeholder="Đơn vị tính - Số lượng tồn" id="product_unit" disabled="disabled" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Giá bán:</span>
                                                    </div>
                                                    <input type="text" placeholder="Gián bán" id="product_price" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                            <!---->
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Tồn nợ</span>
                                                    </div>
                                                    <input type="text" placeholder="0" id="first-name-icon" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group mb-3">
                                                    <input type="number" id="product_quantity" aria-label="Recipient's username" aria-describedby="basic-addon2" min="1" class="form-control" value="1">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">SL (*)</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <!---->
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group mb-3">
                                                    <input type="number" id="product_discount" aria-label="Recipient's username" aria-describedby="basic-addon2" min="0" value="0" max="100" class="form-control">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">CK (%)</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <!---->
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-append">
                                                        <span id="basic-addon2" class="input-group-text">Thành tiền:</span>
                                                    </div>
                                                    <input type="text" id="sum_price" placeholder="Tổng" disabled="disabled" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="position-relative">
                                                <input id="cart_note" placeholder="Ghi chú" class="form-control">
                                            </div>
                                            <!---->
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <button type="button" class="btn btn-primary btn-block" id="submit_addCart">Thêm</button>
                                        <button type="button" class="btn btn-info btn-block" id="refresh_cart">
                                            Làm mới
                                        </button>
                                     
                                        <hr>
                                        <button type="button" id="payment_btn" disabled="disabled" onclick="Payment_order()" class="btn btn-warning btn-block">
                                            Thanh toán
                                        </button>
                                        <button type="button" disabled="disabled" onclick="Payment_order()" class="btn btn-dark btn-block"id="btn_debit">
                                            Ghi nợ
                                        </button>
                                        <hr>
                                        <button type="button" id="order_btn" disabled="disabled" class="btn btn-success btn-block">
                                            Xem hoá đơn
                                        </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div id="dataContainer">
                @{ Html.RenderAction("Index", "carts", new { customer_id = -1 });}
            </div>
           
              
                </div>
            </div>
</section>

