
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_QuyThanh.cshtml";
}
<input type="text" hidden id="URLFindGroupProduct" value="@Url.Action("FindGroupProduct", "groups")/" />
<input type="text" hidden id="URLUpdateGroupProduct" value="@Url.Action("UpdateGroupProduct", "groups")" />
<input type="text" hidden id="URLChecknameAvailability" value="@Url.Action("CheckGroupnameAvailability", "groups")" />
<input type="text" hidden id="URL_List" value="@Url.Action("_GroupList", "groups")" />
<input type="text" hidden id="URLCreate" value="@Url.Action("Create_GroupProduct", "groups")" />

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Quản lý nhóm hàng</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="https://tancool.net">
                                    <i class="feather icon-home">
                                    </i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">Quản lý nhóm hàng</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-10">
                                    <h4>NHÓM HÀNG</h4>
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn  btn-primary btn-block" data-toggle="modal" data-target="#Addform">Thêm mới</button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-border-style">
                            <div class="table-responsive" id="dataContainer">
                                @{ Html.RenderAction("_GroupList", "groups");}


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="Addform" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="AddformLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="needs-validation GroupForm" method="post" action="@Url.Action("Create_GroupProduct", "groups")" novalidate>
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title" id="AddformLabel">Thêm mới nhóm hàng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>
                                    Tên nhóm hàng<span class="text-danger">*</span>
                                </label>
                                <div class="position-relative">
                                    <input type="text" placeholder="Nhập tên nhóm hàng" id="Add_name" class="form-control" name="Add_name" pattern="\S+.*" required>
                                    <p id="Status" />
                                    <div class="invalid-feedback">
                                        Vui lòng nhập tên nhóm hàng !
                                    </div>
                                </div> <!---->
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary"@* id="btn_submit"*@>Thêm mới</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div id="Edit_Modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Edit_ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="needs-validation GroupForm" method="post"  action="@Url.Action("UpdateGroupProduct", "groups")" novalidate>
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title" id="Edit_ModalLabel">Chỉnh sửa nhóm hàng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>
                                    Tên nhóm hàng<span class="text-danger">*</span>
                                </label>
                                <div class="position-relative">
                                    <input hidden id="edit_id" name="id" />
                                    <input type="text" placeholder="Nhập tên nhóm hàng" id="Edit_name" class="form-control" name="Edit_name" pattern="\S+.*" required>
                                    <div class="invalid-feedback">
                                        Vui lòng nhập tên nhóm hàng !
                                    </div>
                                </div> <!---->
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary"@* id="submit_edit" onclick="Update()"*@>Chỉnh sửa</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script type="text/javascript">
    var row;
    $(document).ready(function () {
        $('#example').DataTable({
            pagingType: 'full_numbers',
        });
    });
</script>

