@model IEnumerable<CAP_TEAM05_2022.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_QuyThanh.cshtml";

}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Quản lý danh mục</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="https://tancool.net">
                                    <i class="feather icon-home">
                                    </i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">Quản lý danh mục</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-10">
                                    <h4>Danh mục sản phẩm</h4>
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn  btn-primary btn-block" data-toggle="modal" data-target="#exampleModalLive">Thêm mới</button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-border-style">
                            <div class="table-responsive">
                                <table id="example" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã danh mục</th>
                                            <th>Tên danh mục</th>
                                            <th width="15%">Trạng thái</th>
                                            <th width="15%">
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.code</td>
                                                <td>@item.name</td>
                                                <td>
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input">
                                                        <label class="custom-control-label">
                                                        </label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <button class="btn btn-success">
                                                        <i class="feather icon-edit">
                                                        </i>
                                                    </button>
                                                    <button class="btn btn-danger" onclick="deleteAlert('@item.id')" id="Delete">
                                                        <i class="feather icon-trash-2">
                                                        </i>
                                                    </button>
                                                
                                                </td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="exampleModalLive" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLiveLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="needs-validation" method="post" action="@Url.Action("Create_Category", "categories")" novalidate>
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title" id="exampleModalLiveLabel">Thêm mới danh mục</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>
                                    Tên danh mục<span class="text-danger">*</span>
                                </label>
                                <div class="position-relative">
                                    <input type="text" placeholder="Nhập tên danh mục" id="first-name-icon" class="form-control" name="name_category" required>
                                    <div class="invalid-feedback">
                                        Vui lòng nhập tên danh mục !
                                    </div>
                                </div> <!---->
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-secondary" data-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                    </div>
                </div>
        </form>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#example').DataTable({
            pagingType: 'full_numbers',
        });
    });
</script>
<script type="text/javascript">
    function deleteAlert(category_id) {
        console.log("hihi")
        swal({
            title: "Bạn chắn chắn muốn xóa ?",
            type: "warning",
            showCancelButton: true,
            closeOnConfirm: false,
            confirmButtonText: "Xác nhận",
            confirmButtonColor: "#ec6c62",
        },
            function () {
                $.ajax({
                    url: "/categories/Delete_Category/",
                    data: { "category_id": category_id },
                    type: "POST"
                })
                    .done(function (data) 
                        {
                            sweetAlert
                                ({
                                    title: "Đã xóa!",
                                    type: "success"
                                },
                                    function () {
                                        window.location.href = '/categories/Index'
                                    })
                        })
                    .error(function (data) {
                        swal("OOps", "Chúng tôi không thể kết nối đến server!", "error");
                    })
            })
    }
</script>