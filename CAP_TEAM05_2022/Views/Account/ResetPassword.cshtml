@model CAP_TEAM05_2022.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>TanThanh Website</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/Template/assets/images/logo-icon.png" type="image/x-icon">

    <!-- vendor css -->
    <link rel="stylesheet" href="~/Template/assets/css/style.css">
    <link href="~/Content/css/custom-css.css" rel="stylesheet" />

</head>

<!-- [ auth-signin ] start -->
<body>
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <img src="@Url.Content("~/Template/assets/images/logoTT.png")" alt="" class="img-fluid mb-4 image-logo">
            <div class="card borderless">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="card-body">
                            <h4 class="form-title">Đăng nhập</h4>
                            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <span class="help-block">
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Code)
                                </span>
                                <hr>

                                <div class="form-group mb-3">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Địa chỉ email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


                                </div>
                                <div class="form-group mb-4">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-4">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>

                                <button type="submit" class="btn btn-block btn-primary mb-4">Xác nhận</button> <hr>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- [ auth-signin ] end -->
    <!-- Required Js -->
    <script src="~/Template/assets/js/vendor-all.min.js"></script>
    <script src="~/Template/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/Template/assets/js/pcoded.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

   

