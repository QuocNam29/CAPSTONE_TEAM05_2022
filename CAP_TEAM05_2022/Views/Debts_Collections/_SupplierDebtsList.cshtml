@model IEnumerable<CAP_TEAM05_2022.Models.customer>
@{
    int no = 0;
}
<table id="example1" class="table table-hover">
    <thead>
        <tr>
            <th class="text-center">STT</th>
            <th>Mã nhà cung cấp</th>
            <th>Tên nhà cung cấp</th>
            <th>Số đơn nợ</th>
            <th class="text-center">Tổng tiền</th>
            <th class="text-center">Đã thu</th>
            <th class="text-center">Còn nợ</th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            no++;
            <tr class="point-custom">
                <td class="text-center">
                    @no
                </td>
                <td>@item.code</td>
                <td>@item.name</td>
                <td>@item.inventory_order.Where(s => s.state == 2).Count()</td>
                <td class="text-center">
                    @String.Format("{0:0,00}", item.inventory_order.Where(s => s.state == 2).Sum(s => s.Total))₫
                </td>
                <td class="text-center">
                    @String.Format("{0:0,00}", item.inventory_order.Where(s => s.state == 2).Sum(s => s.payment))₫
                </td>
                <td class="text-center">
                    @String.Format("{0:0,00}", (item.inventory_order.Where(s => s.state == 2).Sum(s => s.Total) - item.inventory_order.Where(s => s.state == 2).Sum(s => s.payment)))₫
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-info" onclick="DebtCollection(this,'@item.id', 2)">Chọn</button>
                    <button type="button" class="btn btn-info" onclick="GetList_History('@item.id')">Đơn hàng nợ</button>
                    <button type="button" title="Xem chi tiết" class="btn btn-secondary" onclick="GetList_orderDetails('@item.id')">
                        <span>
                            <i class="fa icon-4 icon-custom fa-info">
                            </i>
                        </span>
                    </button>
                </td>
            </tr>
        }



    </tbody>
</table>