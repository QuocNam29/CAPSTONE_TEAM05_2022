@model IEnumerable<CAP_TEAM05_2022.Models.sale>

<style>
    .modal-lg {
        max-width: 1200px;
    }
</style>
<div id="historyModal" tabindex="-1" role="dialog" aria-labelledby="historyModalTitle" class="modal fade bd-example-modal-lg">
    <div role="document" class="modal-dialog modal-lg">
        <form>
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 id="historyModalTitle" class="modal-title white">Lịch sử đơn hàng</h5>
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">STT</th>
                                            <th class="text-center">Mã sản phẩm</th>
                                            <th class="text-center">Tên sản phẩm</th>
                                            <th class="text-center">Đơn giá</th>
                                            <th class="text-center">Số lượng</th>
                                            <th class="text-center">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    @if (Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            int no = 0;
                                            var details = item.sale_details.ToList();
                                            <tbody>
                                                @if (details.Count() > 0)
                                                {
                                                    foreach (var item_details in details)
                                                    {
                                                        no++;
                                                        <tr>
                                                            <td class="text-center">
                                                                @no
                                                            </td>
                                                            <td class="text-center">
                                                                @item_details.product.code
                                                            </td>
                                                            <td class="text-center"> @item_details.product.name</td>
                                                            <td class="text-center">
                                                                @String.Format("{0:0,00}", item_details.price / item_details.sold)/<span class="txt-unit">@item_details.unit</span>
                                                            </td>
                                                            <td class="text-center">
                                                                @item_details.sold<span class="txt-unit">@item_details.unit</span>
                                                            </td>
                                                            <td class="text-center">
                                                                @String.Format("{0:0,00}", item_details.price)₫
                                                            </td>
                                                        </tr>

                                                    }
                                                }
                                                else
                                                {
                                                    <tr style="display: none;">
                                                        <td colspan="7">
                                                            <div class="alert alert-warning">
                                                                <p class="text-center">Không tìm thấy dữ liệu</p>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }


                                            </tbody>
                                            <tbody>
                                                <tr>
                                                    <td colspan="3">
                                                        <p>
                                                            Mã đơn hàng: <span>@item.code</span>
                                                        </p>
                                                        <!---->
                                                    </td>
                                                    <td colspan="2">
                                                        <p>
                                                            Ngày mua hàng : <span> @String.Format("{0:HH:mm - dd/MM/yyy}", item.created_at)</span>
                                                        </p>
                                                        <!---->
                                                    </td>
                                                    <td colspan="2" class="text-left">
                                                        <div class="total-div">

                                                            <div>

                                                                Thành tiền:
                                                                <span class="text">
                                                                    @String.Format("{0:0,00}", item.total)₫
                                                                </span>

                                                            </div>
                                                            @if (item.prepayment >= 0)
                                                            {
                                                                <div>
                                                                    Đã thanh toán:
                                                                    <span class="text-success">
                                                                        @String.Format("{0:0,00}", item.prepayment)₫
                                                                    </span>
                                                                </div>
                                                                <div>
                                                                    Còn nợ:
                                                                    <span class="text-danger">
                                                                        @String.Format("{0:0,00}", item.total - item.prepayment)₫
                                                                    </span>
                                                                </div>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>

                                            </tbody>
                                        }
                                    }
                                    else
                                    {
                                        <tbody>
                                            <tr>
                                                <td colspan="7">
                                                    <div class="alert alert-warning">
                                                        <p class="text-center">Không tìm thấy dữ liệu</p>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
