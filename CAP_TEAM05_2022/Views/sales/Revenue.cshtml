                                                                    <th class="text-center">Đơn giá bán</th>
                                                                   @* <th class="text-center">Tổng Giá bán</th>*@
                                                                    <th class="text-center">Lợi nhuận</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in Model)
                                                                {
                                                                <tr>
                                                                    <td>@item.sale_details.product.code</td>
                                                                    <td>@item.sale_details.product.name</td>
                                                                    <td class="text-center">
                                                                        @item.sale_details.product.unit
                                                                    </td>
                                                                    <td class="text-center">
                                                                        @item.sale_details.product.quantity
                                                                    </td>
                                                                    <td class="text-center">
                                                                        @(item.sale_details.product.purchase_price ) đ
                                                                    </td>
                                                                   @* <td class="text-center">
                                                                        @(item.sale_details.product.purchase_price * item.sale_details.product.quantity)
                                                                    </td>*@
                                                                    <td class="text-center">
                                                                        @item.quantity
                                                                    </td>
                                                                    <td class="text-center">
                                                                        @item.Price đ
                                                                    </td>
                                                                    @*<td class="text-center">
                                                                        @(item.Price * item.quantity)
                                                                    </td>*@
                                                                    @if ((item.Price - item.sale_details.product.purchase_price) * item.quantity > 0)
                                                                    {
                                                                        <td class="text-center text-success">
                                                                           + @((item.Price - item.sale_details.product.purchase_price) *item.quantity) đ
                                                                        </td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td class="text-right text-danger">
                                                                            @((item.Price - item.sale_details.product.purchase_price) *item.quantity) đ
                                                                        </td>
                                                                    }

                                                                </tr>
                                                                }


                                                            </tbody>
                                                        </table>  
                                                    </div>
                                                </div>
