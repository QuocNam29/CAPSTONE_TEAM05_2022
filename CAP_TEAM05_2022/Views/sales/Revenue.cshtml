                                                                <tr>
                                                                    <th>Mã sản phẩm</th>
                                                                    <th>Tên sản phẩm</th>
                                                                    <th class="text-center">Đơn vị</th>
                                                                    <th class="text-center">Số lượng gốc</th>
                                                                    <th class="text-center">Đơn giá gốc</th>
                                                                   @* <th class="text-center">Tổng Giá gốc</th>*@
